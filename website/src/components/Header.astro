---
const links = [
  { href: '#features', label: 'Features' },
  { href: '#demo', label: 'Demo' },
  { href: '#install', label: 'Install' },
  { href: '#benchmarks', label: 'Benchmarks' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[#0d1117]/85 backdrop-blur-xl border-b border-[#30363d]">
  <div class="max-w-6xl mx-auto px-6 flex items-center justify-between h-16">
    <!-- Logo -->
    <a href="#" class="flex items-center gap-2.5 font-bold text-lg">
      <div class="w-8 h-8 bg-red-600 rounded-lg flex items-center justify-center text-white font-black text-base">V</div>
      <span>velka</span>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden md:flex items-center gap-7">
      {links.map(l => (
        <a href={l.href} class="text-sm text-[#8b949e] hover:text-[#e6edf3] transition-colors">{l.label}</a>
      ))}
    </nav>

    <!-- GitHub + hamburger -->
    <div class="flex items-center gap-3">
      <a
        href="https://github.com/wesllen-lima/velka"
        class="hidden sm:inline-flex items-center gap-1.5 px-4 py-2 border border-[#30363d] rounded-lg text-sm font-medium hover:bg-[#161b22] hover:border-[#6e7681] transition-all"
      >
        <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
      </a>
      <button
        id="hamburger"
        aria-label="Toggle navigation"
        aria-expanded="false"
        class="md:hidden flex flex-col gap-1.5 p-1"
      >
        <span class="block w-5 h-0.5 bg-[#e6edf3] rounded transition-all"></span>
        <span class="block w-5 h-0.5 bg-[#e6edf3] rounded transition-all"></span>
        <span class="block w-5 h-0.5 bg-[#e6edf3] rounded transition-all"></span>
      </button>
    </div>
  </div>
</header>

<!-- Mobile nav -->
<nav
  id="mobile-nav"
  class="hidden fixed top-16 left-0 right-0 z-40 bg-[#0d1117]/98 backdrop-blur-xl border-b border-[#30363d] px-6 py-2 flex-col"
>
  {links.map(l => (
    <a
      href={l.href}
      onclick="document.getElementById('mobile-nav').classList.add('hidden')"
      class="py-3.5 text-sm text-[#8b949e] hover:text-[#e6edf3] border-b border-[#30363d] last:border-0 transition-colors"
    >
      {l.label}
    </a>
  ))}
  <a
    href="https://github.com/wesllen-lima/velka"
    class="py-3.5 text-sm text-[#8b949e] hover:text-[#e6edf3] transition-colors"
  >
    GitHub â†—
  </a>
</nav>
