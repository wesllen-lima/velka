---

<section id="demo" class="py-24 bg-gradient-to-b from-transparent via-[#10b981]/3 to-transparent">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-14 on-scroll">
      <h2 class="text-[clamp(26px,4vw,38px)] font-bold mb-3">See it in action</h2>
      <p class="text-[#8b949e] text-base">A typical scan across a project with leaked secrets.</p>
    </div>

    <div class="on-scroll max-w-3xl mx-auto bg-[#010409] border border-[#30363d] rounded-2xl overflow-hidden shadow-[0_20px_60px_rgb(0,0,0,0.5)]">
      <!-- Window bar -->
      <div class="flex items-center gap-2 px-4 py-3 bg-[#161b22] border-b border-[#30363d]">
        <div class="w-3 h-3 rounded-full bg-[#ff5f57]"></div>
        <div class="w-3 h-3 rounded-full bg-[#febc2e]"></div>
        <div class="w-3 h-3 rounded-full bg-[#28c840]"></div>
        <span class="ml-auto text-xs text-[#6e7681] font-mono">velka scan .</span>
      </div>

      <!-- Body -->
      <div class="p-6 font-mono text-[13px] leading-[1.9] sm:text-sm">
        <p class="text-[#6e7681]">$ <span class="text-[#e6edf3]">velka scan . --deep-scan</span></p>
        <br />
        <p class="text-[#6e7681]">Scanning 2,847 files across 143 directories...</p>
        <br />

        {[
          { sev: 'MORTAL', sevColor: 'text-red-500', loc: 'src/config.js:4',      rule: 'AWS_ACCESS_KEY',     conf: '92%' },
          { sev: 'MORTAL', sevColor: 'text-red-500', loc: 'lib/auth.py:12',       rule: 'GITHUB_TOKEN',       conf: '88%' },
          { sev: 'MORTAL', sevColor: 'text-red-500', loc: '.env.prod:1',           rule: 'STRIPE_SECRET_KEY',  conf: '95%' },
          { sev: 'MORTAL', sevColor: 'text-red-500', loc: 'deploy/k8s.yaml:23',   rule: 'GCP_SERVICE_ACCOUNT',conf: '91%' },
          { sev: 'VENIAL', sevColor: 'text-yellow-500', loc: 'docker-compose.yml:8', rule: 'HARDCODED_IP',    conf: '45%' },
        ].map(f => (
          <div class="flex flex-wrap gap-3 mb-0.5">
            <span class={`${f.sevColor} font-bold w-16`}>{f.sev}</span>
            <span class="text-[#6e7681]">{f.loc}</span>
            <span class="text-[#8b949e]">{f.rule}</span>
            <span class="text-[#f59e0b]/80">conf: {f.conf}</span>
          </div>
        ))}

        <div class="mt-4 pt-3 border-t border-[#30363d] text-[#6e7681]">
          <span class="text-red-500">4 mortal</span>
          <span class="mx-2">|</span>
          <span class="text-yellow-500">1 venial</span>
          <span class="mx-2">|</span>
          <span>2,847 files in 18ms</span>
        </div>
      </div>
    </div>
  </div>
</section>
