---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Velka | The Code Sin Judge',
  description = 'Blazing-fast secret scanner written in Rust. 52+ rules, ML classifier, LSP server, IaC scanning, baseline management. Zero telemetry.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content="Velka | The Code Sin Judge" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <link rel="canonical" href="https://wesllen-lima.github.io/velka/" />
    <!-- Font performance: preconnect first, then load with swap -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
    <script>
      // Scroll animation
      const io = new IntersectionObserver(
        (entries) => entries.forEach((e) => e.isIntersecting && e.target.classList.add('visible')),
        { threshold: 0.08 }
      );
      document.querySelectorAll('.on-scroll').forEach((el) => io.observe(el));

      // Hamburger â€” toggle hidden + flex properly
      const btn = document.getElementById('hamburger');
      const nav = document.getElementById('mobile-nav');
      function openNav() {
        nav?.classList.remove('hidden');
        nav?.classList.add('flex');
        btn?.setAttribute('aria-expanded', 'true');
        btn?.classList.add('is-open');
      }
      function closeNav() {
        nav?.classList.add('hidden');
        nav?.classList.remove('flex');
        btn?.setAttribute('aria-expanded', 'false');
        btn?.classList.remove('is-open');
      }
      btn?.addEventListener('click', () =>
        nav?.classList.contains('hidden') ? openNav() : closeNav()
      );
      // Close on any nav link tap
      nav?.querySelectorAll('a').forEach((a) => a.addEventListener('click', closeNav));

      // Clipboard copy on install button
      const installBtn = document.getElementById('install-btn');
      const copyHint = document.getElementById('copy-hint');
      installBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        navigator.clipboard?.writeText('cargo install velka --locked').then(() => {
          if (copyHint) {
            copyHint.textContent = 'copied!';
            setTimeout(() => (copyHint.textContent = 'click to copy'), 2000);
          }
        });
        document.getElementById('install')?.scrollIntoView({ behavior: 'smooth' });
      });
    </script>
  </body>
</html>
